// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([name])
}

model StockTracker {
    id            Int           @id @default(autoincrement())
    name          String
    ticker        String        @db.VarChar(16)
    description   String
    typeId        Int
    type          StockType     @relation(fields: [typeId], references: [id])
    price         Float
    minPriceAlert Float
    maxPriceAlert Float
    currencyId    Int
    currency      StockCurrency @relation(fields: [currencyId], references: [id])
    favorite      Boolean
    createdAt     DateTime      @default(now())
    updatedAt     DateTime      @updatedAt
    published     DateTime?      @default(now())

    @@index([name])
}

model StockType {
    id           Int            @id @default(autoincrement())
    name         String
    StockTracker StockTracker[]
}

model StockCurrency {
    id           Int            @id @default(autoincrement())
    name         String
    StockTracker StockTracker[]
}
